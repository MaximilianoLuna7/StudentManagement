# application.properties.example
# Configuración de la base de datos
spring.datasource.url=jdbc:mysql://localhost:3306/nombre_de_la_base_de_datos
spring.datasource.username=usuario_de_la_base_de_datos
spring.datasource.password=contraseña_de_la_base_de_datos

# Configuración de Hibernate (ORM)
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# Configuración del servidor
server.port=8080
server.servlet.context-path=/api

# Configuración de Spring Security (JWT)
jwt.secret=clave_secreta_para_firmar_los_tokens
jwt.expiration=86400000  # 1 día en milisegundos

# Configuración de logging
logging.level.root=INFO
logging.level.org.springframework=INFO
logging.level.com.tuproyecto=DEBUG

# Otras configuraciones
app.name=Student Management System
app.version=1.0.0